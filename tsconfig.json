{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "target": "ES2015",                                  
    "lib": ["ESNext"],                              
    "moduleResolution": "NodeNext",   
    "module": "NodeNext",                    
    "baseUrl": "./",                                  
    "declaration": true,                              
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
  },
  "include": ["src"]
}
